<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" styleClass="anchorPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CharacterGenerator.Controller.Character.AddCharacterViewController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Character Name" />
      <TextField fx:id="enterCharacterName" layoutX="14.0" layoutY="31.0" prefHeight="25.0" prefWidth="200.0" />
      <Label layoutX="14.0" layoutY="64.0" text="Description" />
      <TextArea fx:id="enterCharacterDescription" layoutX="14.0" layoutY="81.0" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
      <Label layoutX="229.0" layoutY="64.0" text="Equipment" />
      <ListView fx:id="selectEquipmentListView" layoutX="229.0" layoutY="81.0" prefHeight="200.0" prefWidth="301.0" />
      <Label layoutX="17.0" layoutY="292.0" text="Strength" />
      <TextField fx:id="enterCharacterStrength" alignment="CENTER" layoutX="17.0" layoutY="309.0" prefHeight="25.0" prefWidth="85.0" />
      <Label layoutX="123.0" layoutY="292.0" text="Dexterity" />
      <TextField fx:id="enterCharacterDexterity" alignment="CENTER" layoutX="123.0" layoutY="309.0" prefHeight="25.0" prefWidth="91.0" />
      <Button fx:id="insertCharacterButton" layoutX="14.0" layoutY="350.0" mnemonicParsing="false" onAction="#insertCharacterButtonClick" prefHeight="25.0" prefWidth="200.0" text="Insert" />
      <Button fx:id="getEquipmentIDButton" layoutX="229.0" layoutY="309.0" mnemonicParsing="false" onAction="#getEquipmentIDButtonClick" prefHeight="25.0" prefWidth="301.0" text="Get Equipment WIP" />
      <Label layoutX="229.0" layoutY="14.0" text="Player Name" />
      <TextField fx:id="enterCharacterPlayerName" layoutX="229.0" layoutY="31.0" prefHeight="25.0" prefWidth="200.0" />
   </children>
</AnchorPane>
